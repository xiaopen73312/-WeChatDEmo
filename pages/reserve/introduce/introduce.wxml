<view class='introduce'>
  <view style='position:relative'>
    <image src='../../images/bannar_130.png' class='banner'></image>
    <text class='title'>打造亚洲最大规模的经济连锁酒店</text>
  </view>
 
  <view >
    <scroll-view scroll-x="true" class="tab-introduce" scroll-left="{{scrollLeft}}">
        <view class="tab-item {{currentTab==0?'active':''}}"  data-current="0" bindtap="swichNav">概况</view>
        <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">设施</view>
    </scroll-view>
    <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab"
     style="height:{{winHeight}}rpx">
        <swiper-item>
            <scroll-view scroll-y="true" class="scoll-h" >
                <view class='tab1'>
                  <text decode='true' space='emsp'>&emsp;&emsp;{{hotelName}}</text>
                  <text decode='true' space='emsp'>&emsp;&emsp;{{hotelAddress}}</text>
	                <text decode='true' space='emsp'>&emsp;&emsp;{{hotelInfo}}</text>
                </view>
            </scroll-view>
        </swiper-item>

        <swiper-item>
            <scroll-view scroll-y="true" class="scoll-h" >
                <view class='tab2'>
                  	<view class='common'>
                      <image src='../../images/icon_facilities_7.png' class='pic1'></image>
                      <text>信用卡付款</text>
                    </view>
                    <view class='common'>
                      <image src='../../images/icon_facilities_3.png' class='pic2'></image>
                      <text>免费无线网络</text>
                    </view>
                    <view class='common'>
                      <image src='../../images/icon_facilities_1.png'
                      class='pic3'></image>
                      <text>电梯</text>
                    </view>
                    <view class='common'>
                        <image src='../../images/icon_facilities_6.png' class='pic4'></image>
                        <text>喷泉</text>
                    </view>
                    <view class='common'>
                        <image src='../../images/icon_facilities_5.png' class='pic5'></image>
                        <text>会议室</text>
                    </view>
                    <view class='common'>
                      <image src='../../images/icon_facilities_2.png'
                      class='pic6'></image>
                      <text>停车设施</text>
                    </view>
                    <view class='common'>
                      <image src='../../images/icon_facilities_4.png'
                      class='pic7'></image>
                      <text>电视</text>
                    </view>
                    <view class='common'>
                      
                    </view>
                    <view class='common'>
                      
                    </view>
                </view>
            </scroll-view>
        </swiper-item>
    </swiper>
  </view>
</view>