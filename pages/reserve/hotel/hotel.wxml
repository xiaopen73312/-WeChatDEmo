      <view class='discount'>
        <view class='normal'>满减</view>
        <view class='normal circel'>促</view>
        <view class='normal special'>团购</view>
      </view>
    </view>
    <view class='price'>
      <view>{{item.price}}<text class='text'>起</text></view>
    </view>
  </view>
 </view>
</view>
