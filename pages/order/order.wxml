
<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">待支付</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">待入住</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    
    <swiper-item>
      <block wx:if='{{show}}'>
        <view class='order-des'> 
          <view>订单号：1218428</view>
            <view class='time-wrapper'>
              <text decode="{{true}}" space='emsp'>&emsp;入住：2018-03-06</text>
              <text class='time'>退房：2018-03-08</text>
              <text>共3晚</text>
            </view>
            <view>
              <text decode="{{true}}" space='emsp'>&emsp;房型：大床房</text>
            </view>
        </view>
        <view class='order-price'>
            <view class='left'>
              订单总价：<text class='text1'>￥599.00</text>
            </view>
            <view class='right'>
              取消订单<text class='text2'>立即支付</text>
            </view>
        </view>
      </block>
      <block wx:else='{{show}}'>
        <view class='no-order'>
          <image src='../images/icon_noorder.png'></image>
          <view>您目前尚无此类订单</view>
        </view> 
      </block>
    </swiper-item>
    
</swiper>

